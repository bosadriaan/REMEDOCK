version: '3'
services:
  fastapi_app:
    build: .
    ports:
      - "8080:80"
    depends_on:
      - chroma
  chroma:
    image: chromadb/chroma
    ports:
      - "8000:8000"
  react_app:
    build:
      context: ..\REME2\contact-reconnect
    ports:
      - "3000:3000"
    depends_on:
      - fastapi_app
